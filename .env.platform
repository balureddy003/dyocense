# ==================================================
# DYOCENSE PLATFORM MODE CONFIGURATION
# Full enterprise stack with all features
# ==================================================

# Deployment Mode
DEPLOYMENT_MODE=platform

# Application Settings
ENVIRONMENT=production
DEBUG=false
LOG_LEVEL=INFO

# MongoDB (Primary Data Store)
USE_MONGODB=true
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/dyocense?retryWrites=true&w=majority
MONGO_DB_NAME=dyocense_platform
MONGO_MAX_POOL_SIZE=50
MONGO_MIN_POOL_SIZE=10
MONGO_REPLICA_SET=rs0
MONGO_TLS=true
ENABLE_TRANSACTIONS=true

# Neo4j Evidence Graph (Platform Feature)
USE_NEO4J=true
NEO4J_URI=neo4j+s://your-instance.databases.neo4j.io
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=your-neo4j-password
NEO4J_DATABASE=neo4j
ENABLE_EVIDENCE_GRAPH=true

# Qdrant Vector Search (Platform Feature)
USE_QDRANT=true
QDRANT_URL=https://your-cluster.qdrant.io
QDRANT_API_KEY=your-qdrant-api-key
QDRANT_COLLECTION=dyocense_knowledge
ENABLE_VECTOR_SEARCH=true

# Keycloak Enterprise Auth (Platform Feature)
USE_KEYCLOAK=true
KEYCLOAK_SERVER_URL=https://keycloak.yourdomain.com
KEYCLOAK_REALM=dyocense
KEYCLOAK_CLIENT_ID=dyocense-api
KEYCLOAK_CLIENT_SECRET=your-client-secret
KEYCLOAK_ADMIN_USERNAME=admin
KEYCLOAK_ADMIN_PASSWORD=your-admin-password

# LLM Configuration
USE_LLM=true
LLM_PROVIDER=azure
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_API_KEY=your-api-key-here
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4000

# Advanced Features
ENABLE_CACHING=true
ENABLE_METRICS=true
STRICT_MODE=true  # Fail if dependencies unavailable
FORCE_INMEMORY_MODE=false

# Advanced Solvers (Commercial)
SOLVER_DEFAULT=gurobi
SOLVER_TIME_LIMIT=300
GUROBI_LICENSE_FILE=/opt/gurobi/gurobi.lic

# Email/Notifications
SMTP_HOST=smtp.sendgrid.net
SMTP_PORT=587
SMTP_USERNAME=apikey
SMTP_PASSWORD=your-sendgrid-api-key
FROM_EMAIL=support@dyocense.com

# Subscription & Billing
STRIPE_API_KEY=sk_live_your_stripe_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Security
CORS_ORIGINS=https://platform.dyocense.com,https://app.dyocense.com
RATE_LIMIT_PER_MINUTE=120
SESSION_SECRET=your-session-secret-here

# Admin
ADMIN_TENANT_ID=admin-dyocense
ADMIN_API_TOKEN=admin-secure-token-change-this

# Trial Configuration
TRIAL_DAYS=14
ALLOW_OWNER_BOOTSTRAP_LOGIN=false

# ==================================================
# PLATFORM MODE - FULL CAPABILITIES
# ==================================================
# All features enabled for enterprise customers:
# ✅ Evidence Graph (Neo4j) - Full audit trails
# ✅ Vector Search (Qdrant) - Semantic knowledge base
# ✅ Enterprise Auth (Keycloak) - SSO, SAML, SCIM
# ✅ Advanced Solvers (Gurobi) - Optimal solutions
# ✅ Transactions - Data consistency guarantees
# ✅ High availability - Replica sets, failover
