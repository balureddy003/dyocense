{
  "info": {
    "name": "Evidence Write",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Write Evidence Snapshot",
      "request": {
        "method": "POST",
        "header": [
          {"key": "Authorization", "value": "Bearer {{jwt}}"},
          {"key": "Idempotency-Key", "value": "idem_{{timestamp}}"}
        ],
        "url": {
          "raw": "{{kernel}}/evidence/write",
          "host": ["{{kernel}}"],
          "path": ["evidence", "write"]
        },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"tenant_id\": \"tenant_std\",\n  \"plan_id\": \"plan_123\",\n  \"solution\": {{solution_payload}},\n  \"constraints\": [\"budget\", \"service_min\"],\n  \"diagnostics\": {{diagnostics_payload}},\n  \"metadata\": {\"seed\": 2025, \"optimodel_sha\": \"sha256:abc123\", \"plan_dna\": \"sha256:def456\"}\n}"
        }
      }
    }
  ]
}
