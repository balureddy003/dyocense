{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Solution Pack",
  "type": "object",
  "description": "Placeholder schema for optimiser outputs. To be detailed in Phase 1.",
  "required": [
    "metadata",
    "decisions",
    "kpis"
  ],
  "properties": {
    "metadata": {
      "type": "object",
      "required": [
        "ops_version",
        "generated_at"
      ],
      "properties": {
        "ops_version": {
          "type": "string",
          "description": "OPS schema version that produced this pack."
        },
        "generated_at": {
          "type": "string",
          "format": "date-time"
        },
        "solver": {
          "type": "string"
        },
        "run_id": {
          "type": "string"
        }
      }
    },
    "decisions": {
      "type": "object",
      "additionalProperties": {
        "type": [
          "number",
          "string",
          "boolean",
          "array",
          "object"
        ]
      },
      "description": "Solution variables, potentially nested by index sets."
    },
    "kpis": {
      "type": "object",
      "additionalProperties": {
        "type": "number"
      }
    },
    "diagnostics": {
      "type": "object",
      "description": "Optional infeasibility or relaxation notes. Shape TBD."
    },
    "artifacts": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "type",
          "uri"
        ],
        "properties": {
          "type": {
            "type": "string"
          },
          "uri": {
            "type": "string",
            "format": "uri"
          },
          "description": {
            "type": "string"
          }
        }
      }
    }
  }
}
