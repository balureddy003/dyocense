{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://schemas.dyocense.com/plan.schema.json",
  "title": "Plan",
  "type": "object",
  "description": "Lightweight plan document returned to SMB surfaces.",
  "required": ["id", "title", "tasks"],
  "properties": {
    "id": {
      "type": "string",
      "description": "Stable identifier for the plan."
    },
    "title": {
      "type": "string",
      "description": "Human readable label."
    },
    "summary": {
      "type": "string"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "updated_at": {
      "type": "string",
      "format": "date-time"
    },
    "tasks": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["label"],
        "properties": {
          "label": {
            "type": "string"
          },
          "owner": {
            "type": "string",
            "description": "Name or identifier for the responsible party."
          },
          "status": {
            "type": "string",
            "enum": ["Not started", "In progress", "Blocked", "Complete"],
            "default": "Not started"
          },
          "due_date": {
            "type": "string",
            "format": "date"
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
